[flake8]
exclude =
    .git,
    __pycache__,
    build,
    dist
max-line-length=120
max-doc-length=120
ignore=E501,W503,E203,W504,E251,E262,E265,E266,W291,W293,D107
; # E501,W503,E203,W504,E251 -> let black handle for formatting
; # E262,E265,E266 -> be less optionated about the way to write comments
; # W291,W293 -> trailing whitespace in docstrings
; # D107 -> Docstring on __init__ files
; # F401 -> Imported but unused on __init__ files
docstring-convention=google
